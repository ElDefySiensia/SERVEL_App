<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!-- VISTA SCROLLABLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white">

        <!-- CONTENIDO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ENCABEZADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/red">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.05"
                    android:paddingVertical="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="60sp"
                    android:textAlignment="center"
                    android:text="SERVEL"/>

            </LinearLayout>


            <!-- CUERPO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02"
                    android:paddingVertical="10dp"
                    android:text="Servicio Electoral de Chile"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textAlignment="center"/>

                <!-- CARTA LOGIN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical"
                    android:background="@drawable/carta_redondeada"
                    android:elevation="12dp"
                    android:padding="20dp"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="Ingresa tu rut:"/>

                    <EditText
                        android:id="@+id/rut_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ej. 11222333-4"
                        android:inputType="text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:text="Ingresa tu clave:"/>

                    <EditText
                        android:id="@+id/clave_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Clave Única"
                        android:inputType="textPassword"
                        android:importantForAutofill="no"/>

                    <Button
                        android:id="@+id/boton_ingresar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:text="Ingresar"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="¿Aún no te has registrado?"
                        android:textAlignment="center"/>

                    <Button
                        android:id="@+id/boton_registrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:text="Registrate"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"/>

                </LinearLayout>
                <!-- CARTA LOGIN -->

            </LinearLayout>

            <!-- INFO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#99000000"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:text="Esta aplicación fue creada con el propósito de modelar un prototipo de app móvil de Servel; no será destinada para el mercado. Logo temporal — propiedad de SERVEL. Usado solo con fines de práctica/estudio."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:textColor="#66000000"
                android:text="© 2025 DefySiensia."/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>