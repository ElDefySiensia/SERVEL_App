<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!-- VISTA SCROLLABLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- CONTENIDO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ENCABEZADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/red">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.05"
                    android:paddingVertical="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="60sp"
                    android:textAlignment="center"
                    android:text="SERVEL"/>

            </LinearLayout>

            <!-- CUERPO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02"
                    android:paddingVertical="10dp"
                    android:text="Voto en Línea"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textAlignment="center"/>

                <!-- CARTA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical"
                    android:background="@drawable/carta_redondeada"
                    android:padding="20dp"
                    android:elevation="4dp"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Para este voto usted contará con una oportunidad, por favor asegurese de que su opción es la correcta, vote racionalmente."
                        android:textSize="16sp"/>

                    <ListView
                        android:id="@+id/lista_candidatos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="20dp"/>

                    <CheckBox
                        android:id="@+id/check_condiciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirmo que mi voto es el correcto."/>

                    <Button
                        android:id="@+id/boton_enviar_voto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:text="Enviar Voto"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/boton_cancelar_voto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        app:backgroundTint="@color/red"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Cancelar Operación"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>

                </LinearLayout>
                <!-- CARTA -->

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 DefySiensia."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>