<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CambioDomicilioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/red">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.05"
                    android:paddingVertical="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="60sp"
                    android:textAlignment="center"
                    android:text="SERVEL"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02"
                    android:paddingVertical="10dp"
                    android:text="Trámites en Línea"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical"
                    android:background="@drawable/carta_redondeada"
                    android:elevation="12dp"
                    android:padding="20dp"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:paddingVertical="10dp"
                        android:text="Cambio de Domicilio"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="Ingrese su nueva dirección:"/>

                    <EditText
                        android:id="@+id/et_nueva_direccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ej. Av. Pajaritos 4050"
                        android:inputType="textPostalAddress"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:text="Ingrese su nueva comuna:"/>

                    <EditText
                        android:id="@+id/et_nueva_comuna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ej. Maipú"
                        android:inputType="text"
                        android:layout_marginBottom="25dp"/>

                    <Button
                        android:id="@+id/btn_guardar_domicilio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:backgroundTint="@color/red"
                        app:backgroundTint="@color/red"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Solicitar Cambio"
                        android:textSize="16sp"/>

                    <Button
                        android:id="@+id/btn_cancelar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="Cancelar"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 DefySiensia."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>