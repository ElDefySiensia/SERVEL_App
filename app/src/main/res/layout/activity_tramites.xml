<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!-- VISTA SCROLLABLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- CONTENIDO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ENCABEZADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/red">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.05"
                    android:paddingVertical="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="60dp"
                    android:textAlignment="center"
                    android:text="SERVEL"/>

            </LinearLayout>

            <!-- CUERPO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02"
                    android:paddingVertical="10dp"
                    android:text="Trámites"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textAlignment="center"/>

                <!-- CARTA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/carta_redondeada"
                    android:padding="20dp"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">

                        <Button
                            android:id="@+id/boton_cambio_domicilio"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:background="@drawable/boton_estilo_servel_ripple"
                            app:backgroundTint="@null"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:text="Cambio de Domicilio"/>

                        <Button
                            android:id="@+id/boton_incorporacion_1"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:background="@drawable/boton_estilo_servel_ripple"
                            app:backgroundTint="@null"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:text="Incorporación al registro electoral"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">

                        <Button
                            android:id="@+id/boton_afiliacion"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:background="@drawable/boton_estilo_servel_ripple"
                            app:backgroundTint="@null"
                            android:text="Solicitud de Afiliación"
                            android:textColor="@color/red"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/boton_incorporacion_2"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:background="@drawable/boton_estilo_servel_ripple"
                            app:backgroundTint="@null"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:text="Consulta de datos" />

                    </LinearLayout>
                </LinearLayout>
                <!-- CARTA -->
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 DefySiensia."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>