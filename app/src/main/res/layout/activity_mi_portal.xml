<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!-- VISTA SCROLLABLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- CONTENIDO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ENCABEZADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/red">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.05"
                    android:paddingVertical="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="60sp"
                    android:textAlignment="center"
                    android:text="SERVEL"/>

            </LinearLayout>


            <!-- CUERPO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:paddingVertical="10dp"
                        android:text="Mi Portal"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:layout_marginLeft="150dp"
                        android:textAlignment="center"/>

                    <Button
                        android:id="@+id/boton_perfil"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="60dp"
                        android:background="@drawable/profile"/>

                </LinearLayout>

                <!-- CARTA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:background="@drawable/carta_redondeada"
                    android:padding="20dp"
                    android:elevation="12dp"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccione un Servicio:"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginBottom="15dp"/>

                    <!-- ORDEN OPTIMIZADO -->
                    <Button
                        android:id="@+id/boton_datos_electorales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="Consulta Datos Electorales"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/boton_tramites"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="Trámites"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/boton_voto_exterior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="Voto en el Exterior"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/boton_conoce_candidatos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="Conoce a los Candidatos"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/boton_juntas_electorales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="Juntas Electorales"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/boton_democracia_desinformacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="Democracia y Desinformación Electoral"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/boton_formacion_ciudadana"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="Formación Ciudadana"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/boton_cerrar_sesion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_estilo_servel_ripple"
                        app:backgroundTint="@color/red"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Cerrar Sesión"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>
                </LinearLayout>
                <!-- CARTA -->

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 DefySiensia."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>