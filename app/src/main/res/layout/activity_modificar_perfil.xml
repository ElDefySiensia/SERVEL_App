<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ModificarNombreActivity">

    <!-- SCROLL COMPLETO -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ENCABEZADO SERVEL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/red">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SERVEL"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="60sp"
                    android:letterSpacing="0.05"
                    android:paddingVertical="5dp"/>
            </LinearLayout>

            <!-- SUBTÍTULO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Servicio Electoral de Chile"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textAllCaps="true"
                android:letterSpacing="0.02"
                android:paddingVertical="10dp"/>

            <!-- CARTA PARA MODIFICAR NOMBRE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/carta_redondeada"
                android:elevation="12dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modificar nombre"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="19sp"
                    android:letterSpacing="0.02"
                    android:paddingVertical="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nuevo nombre:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/et_nuevo_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe tu nombre"
                    android:inputType="textPersonName"
                    android:padding="10dp"/>

                <!-- BOTÓN GUARDAR -->
                <Button
                    android:id="@+id/boton_guardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton_estilo_servel_ripple"
                    android:text="Guardar cambios"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"/>

                <!-- BOTÓN VOLVER -->
                <Button
                    android:id="@+id/boton_cancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/boton_estilo_servel_ripple"
                    android:text="Cancelar"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"/>

            </LinearLayout>

            <!-- PIE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 DefySiensia."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
